<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>ZESKA </title>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;800&display=swap" rel="stylesheet">

<style>
/* ==== GLOBAL THEME VARIABLES ==== */
:root{
  --blur:24px;
  --radius:20px;
  --text:#fff;
  --dim:#999;
  --glass:rgba(255,255,255,0.08);
  --border:rgba(255,255,255,0.18);
  --bg:#000;
}

body.light{
  --bg:#f5f5f5;
  --glass:rgba(0,0,0,0.05);
  --border:rgba(0,0,0,0.15);
  --text:#111;
  --dim:#555;
}

/* ==== LAYOUT ==== */
body{
  margin:0;
  font-family:Poppins, system-ui;
  background:var(--bg);
  color:var(--text);
  transition:.3s ease;
  overflow-x:hidden;
}

header{
  backdrop-filter:blur(var(--blur));
  background:var(--glass);
  border:1px solid var(--border);
  border-radius:var(--radius);
  padding:16px 24px;
  margin:18px;
  display:flex;
  justify-content:space-between;
  align-items:center;
}

/* ==== NAV ==== */
nav a{
  margin:0 12px;
  text-decoration:none;
  color:var(--dim);
  font-weight:600;
  transition:.25s;
}
nav a:hover{color:var(--text)}

/* ==== COMPONENTS ==== */
.card{
  backdrop-filter:blur(var(--blur));
  background:var(--glass);
  border:1px solid var(--border);
  border-radius:var(--radius);
  padding:26px;
  margin-bottom:18px;
  opacity:0;
  transform:translateY(18px);
  transition:.5s ease;
}
.card.show{
  opacity:1;
  transform:translateY(0);
}

/* ==== GRID ==== */
.grid{
  display:grid;
  gap:18px;
  grid-template-columns:repeat(auto-fit, minmax(220px,1fr));
}

.item{
  text-align:center;
  background:var(--glass);
  border:1px solid var(--border);
  padding:14px;
  border-radius:var(--radius);
  cursor:pointer;
  transition:.25s;
}
.item:hover{transform:scale(1.05)}
.glow{
  box-shadow:0 0 18px rgba(0,180,255,0.8), 0 0 28px rgba(0,180,255,0.6);
  border:1px solid rgba(0,180,255,0.9);
}

/* ==== DOCK ==== */
.dock{
  position:fixed;
  bottom:20px;
  left:50%;
  transform:translateX(-50%);
  display:flex;
  gap:12px;
  padding:14px 22px;
  background:var(--glass);
  border:1px solid var(--border);
  border-radius:50px;
  backdrop-filter:blur(var(--blur));
}
.dock div{
  padding:10px 16px;
  border-radius:10px;
  cursor:pointer;
  transition:.25s;
  font-size:14px;
}
.dock div:hover{transform:scale(1.2)}

/* ==== MOBILE ==== */
@media(max-width:600px){
  header{flex-direction:column;gap:10px;text-align:center}
  .dock{transform:translateX(-50%) scale(.90)}
}

/* =====================================================
               CHATBOX STYLES
===================================================== */
#chatbox-btn{
  position:fixed;
  bottom:20px;
  right:20px;
  background:#00b4ff;
  padding:14px 18px;
  border-radius:50%;
  color:#fff;
  cursor:pointer;
  font-size:22px;
  z-index:999;
  transition:.3s;
}
#chatbox-btn:hover{transform:scale(1.12)}

#chatbox{
  position:fixed;
  bottom:80px;
  right:20px;
  width:280px;
  height:360px;
  background:var(--glass);
  border:1px solid var(--border);
  border-radius:18px;
  backdrop-filter:blur(10px);
  display:none;
  flex-direction:column;
  z-index:999;
}

#chat-header{
  padding:10px 14px;
  display:flex;
  justify-content:space-between;
  background:rgba(0,0,0,0.2);
  border-radius:18px 18px 0 0;
  font-weight:600;
}

#chat-header button{
  background:none;
  border:none;
  color:var(--text);
  font-size:18px;
  cursor:pointer;
}

#chat-body{
  flex:1;
  padding:10px;
  overflow-y:auto;
  font-size:14px;
}

.msg{
  margin:6px 0;
  padding:8px 12px;
  border-radius:12px;
  max-width:80%;
  line-height:1.3;
}
.me{background:#00b4ff;color:#fff;margin-left:auto}
.ai{background:var(--glass);border:1px solid var(--border)}

#chat-input{
  display:flex;
  border-top:1px solid var(--border);
}
#chat-input input{
  flex:1;
  padding:10px;
  background:none;
  border:none;
  color:var(--text);
}
#chat-input button{
  padding:10px 14px;
  background:#00b4ff;
  border:none;
  color:#fff;
  cursor:pointer;
}
</style>
</head>
<body>

<header>
  <h2 id="brand"></h2>
  <nav id="nav"></nav>
  <button id="theme">D/W</button>
</header>

<div class="wrap" style="padding:20px;">

  <h3>Quick Access</h3>
  <div class="grid" id="quick"></div>

  <h3>Shortcuts</h3>
  <div class="grid" id="shortcuts"></div>

  <h3>Portfolio</h3>
  <div class="grid" id="portfolio"></div>

  <h3>Project Directory</h3>
  <div class="grid" id="directory"></div>

  <h3>Team</h3>
  <div class="grid" id="team"></div>

  <h3>Contact</h3>
  <div class="item" onclick="window.location.href='tel:9080438088'">ðŸ“ž Call: 9080438088</div>
</div>

<div class="dock" id="dock"></div>

<!-- ================= CHATBOX ================== -->
<div id="chatbox-btn">ðŸ’¬</div>

<div id="chatbox">
  <div id="chat-header">
    <span>ZESKA AI</span>
    <button onclick="toggleChat()">âœ–</button>
  </div>

  <div id="chat-body"></div>

  <div id="chat-input">
    <input id="msg" type="text" placeholder="Type something..." />
    <button onclick="sendMsg()">âž¤</button>
  </div>
</div>

<script>
/* ===========================
     CONFIG (Editable)
===========================*/
const ZESKA_DATA = {

 brand:{ name:"ZESKA", version:"ZESKA" },

 nav:["Services","Projects","Team","Contact"],

 quickAccess:["Apps","Products","Clients"],

 shortcuts:[
  {name:"Hack",link:"hack.html"}, 
  {name:"ðŸ“„ AAC",link:"aac.html", glow:true},
  {name:"Stock",link:"stock.html"},
  {name:"Tech",link:"tech.html"},
  {name:"Login",link:"login.html"},
  {name:" abi project ",link:"abi.html"},
 ],

 portfolio:[
  {title:"Code Studio",desc:"Full-Stack Dev â€¢ 2025",img:"https://images.unsplash.com/photo-1555066931-4365d14bab8c?auto=format&fit=crop&w=800&q=80",link:"coding.html"},
  {title:"Dev Workspace",desc:"Flutter + Backend â€¢ 2025",img:"https://images.unsplash.com/photo-1517430816045-df4b7de11d1d?auto=format&fit=crop&w=800&q=80",link:"zeska-app.html"}
 ],

 directory:[
  "intex.html","1.html","11.html","attendance.html","billing.html","certificate.html","portal.html","stock.html","main.py"
 ],

 team:[
   {name:"Sibi",role:"Founder"},
   {name:"Sibi",role:"Engineer"},
   {name:"Sibi",role:"Designer"},
   {name:"Sibi",role:"CEO"},
   {name:"Sibi",role:"Admin"},
   {name:"Sibi",role:"Hacker"},
   {name:"Sibi",role:"all ? "}
 ]
}


/* ===========================
     RENDER ENGINE
===========================*/
const openItem = link => link && window.open(link, "_blank");

function el(label,link="",glow=false){
  return `<div class="item ${glow?'glow':''}" onclick="openItem('${link}')">${label}</div>`;
}

function render(){
 document.querySelector("#brand").innerText = `${ZESKA_DATA.brand.name} â€“ ${ZESKA_DATA.brand.version}`;

 document.querySelector("#nav").innerHTML = ZESKA_DATA.nav.map(i=>`<a href="#">${i}</a>`).join("");

 document.querySelector("#quick").innerHTML = ZESKA_DATA.quickAccess.map(i=>el(i)).join("");

 document.querySelector("#shortcuts").innerHTML = ZESKA_DATA.shortcuts.map(i=>el(i.name,i.link,i.glow)).join("");

 document.querySelector("#directory").innerHTML = ZESKA_DATA.directory.map(f=>el(f,f)).join("");

 document.querySelector("#portfolio").innerHTML = ZESKA_DATA.portfolio.map(p=>`
    <div class="card" onclick="openItem('${p.link}')">
      <img loading="lazy" src="${p.img}" style="width:100%;border-radius:var(--radius);margin-bottom:12px;">
      <h3>${p.title}</h3>
      <p style="color:var(--dim)">${p.desc}</p>
    </div>
 `).join("");

 document.querySelector("#team").innerHTML = ZESKA_DATA.team.map(t=>el(`${t.name}<br><small style='color:var(--dim)'>${t.role}</small>`)).join("");

 document.querySelector("#dock").innerHTML = ZESKA_DATA.shortcuts.map(i=>`<div class="${i.glow?'glow':''}" onclick="openItem('${i.link}')">${i.name}</div>`).join("");
}


/* ===========================
   THEME SYSTEM + SAVE
===========================*/
if(localStorage.theme==="light") document.body.classList.add("light");
document.querySelector("#theme").onclick=()=>{
 document.body.classList.toggle("light");
 localStorage.theme=document.body.classList.contains("light")?"light":"dark";
};


/* ===========================
    Scroll Reveal
===========================*/
window.addEventListener("scroll",()=>{
 document.querySelectorAll('.card').forEach(card=>{
   if(card.getBoundingClientRect().top<window.innerHeight-50) card.classList.add("show")
 })
});


/* ===========================
       CHATBOX LOGIC
===========================*/
function toggleChat(){
  let box = document.getElementById("chatbox");
  box.style.display = box.style.display==="flex" ? "none" : "flex";
}

document.getElementById("chatbox-btn").onclick = toggleChat;

function sendMsg(){
  let msg = document.getElementById("msg").value.trim();
  if(!msg) return;

  let body = document.getElementById("chat-body");

  // user msg
  body.innerHTML += `<div class='msg me'>${msg}</div>`;
  document.getElementById("msg").value="";

  body.scrollTop = body.scrollHeight;

  // AI reply
  setTimeout(()=>{
    body.innerHTML += `<div class='msg ai'>ZESKA AI: "${msg}" received âœ”</div>`;
    body.scrollTop = body.scrollHeight;
  },500);
}


/* INIT */
render();
</script>

</body>
</html>
